<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:id="@+id/actvMealType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:hint="Meal Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/actvCuisine"
        app:layout_constraintTop_toBottomOf="@+id/actvCuisine" />

    <TextView
        android:id="@+id/tvCuisineText"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Cuisine:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/actvCuisine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/actvCuisine" />

    <AutoCompleteTextView
        android:id="@+id/actvCuisine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Cuisine Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMealType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMealType"
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:layout_marginStart="15dp"
        android:text="Meal Type:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/actvMealType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/actvMealType" />

    <TextView
        android:id="@+id/tvCooktimeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Max CookTime:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/etCooktime"
        app:layout_constraintEnd_toEndOf="@+id/tvMealType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etCooktime" />

    <EditText
        android:id="@+id/etCooktime"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Cooktime"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/tvCooktimeText"
        app:layout_constraintTop_toBottomOf="@+id/actvMealType" />

    <TextView
        android:id="@+id/tvMins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mins"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/etCooktime"
        app:layout_constraintStart_toEndOf="@+id/etCooktime"
        app:layout_constraintTop_toTopOf="@+id/etCooktime" />
</androidx.constraintlayout.widget.ConstraintLayout>